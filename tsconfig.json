{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "target": "ES6",
    "lib": ["es2015", "dom"],
    "module": "ES2015",
    "paths": {
      "@lib/*": ["./src/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["src/**/*", "src/typings.d.ts"]
}
